			<GroupBox DataContext="{Binding RelativeSource={RelativeSource AncestorType=Views:SoheilSplitView}, Path=ViewModel}" 
                      Style="{StaticResource SoheilContentGroupBox}" Header="{Binding CurrentContent.Name}">
