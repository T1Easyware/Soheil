                                        <ComboBox.SelectedValue>
                                            <Binding>
                                                <Binding.Path>CurrentContent.Status</Binding.Path>
                                            </Binding>
                                        </ComboBox.SelectedValue>
                                    </ComboBox>
                                </UniformGrid>
                            </Border>
