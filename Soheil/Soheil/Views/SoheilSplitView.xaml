                                                        <ItemsPanelTemplate>
                                                            <StackPanel
                                                                IsItemsHost="True" 
                                                                Orientation="Horizontal">
                                                            </StackPanel>
                                                        </ItemsPanelTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
