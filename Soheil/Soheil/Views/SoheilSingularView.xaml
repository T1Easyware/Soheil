							<Button DockPanel.Dock="Left" Margin="1" Command="{Binding JobEditor.ExitCommand}">
								<DockPanel>
									<Image DockPanel.Dock="Left" Style="{StaticResource CloseWipeUpImage}"/>
									<TextBlock Text="Exit" Style="{StaticResource TextBlock3DTextStyle}"/>
								</DockPanel>
								<Button.ToolTip>
									<StackPanel>
										<TextBlock Text="بستن ویرایشگر"/>
										<TextBlock Foreground="DarkGray" FontSize="10" Text="ویرایشگر Job بسته می شود و آخرین اطلاعات آن نگه داشته می شود"/>
									</StackPanel>
								</Button.ToolTip>
							</Button>
							<Button DockPanel.Dock="Left" Margin="1" Command="{Binding JobEditor.SaveAllCommand}">
								<DockPanel>
									<Image DockPanel.Dock="Left" Style="{StaticResource SaveWipeUpImage}"/>
									<TextBlock Text="Save &amp; Exit" Style="{StaticResource TextBlock3DTextStyle}"/>
								</DockPanel>
								<Button.ToolTip>
									<StackPanel>
										<TextBlock Text="ذخیره همه و خروج"/>
										<TextBlock Foreground="DarkGray" FontSize="10" Text="تمام برنامه های ویرایشگر Job ذخیره و ویرایشگر بسته می شود"/>
									</StackPanel>
								</Button.ToolTip>
							</Button>
						</DockPanel>
						<Separator/>
						<ToggleButton Margin="2" IsChecked="{Binding JobList.IsVisible}">
							<DockPanel>
								<Image DockPanel.Dock="Left" Style="{StaticResource JobListImage}"/>
								<TextBlock Text="Job List" Style="{StaticResource TextBlock3DTextStyle}"/>
							</DockPanel>
							<ToggleButton.ToolTip>
								<StackPanel>
									<TextBlock Text="نمایش لیست Job ها"/>
									<TextBlock Foreground="DarkGray" FontSize="10" Text="Job های بازه زمانی مشخص شده لیست می شوند"/>
